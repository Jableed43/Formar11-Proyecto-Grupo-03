          <li class="texto"><a href="/contacto">Contacto</a> </li>
        </ul>
        </nav>




        <nav class="container-user">

              
          
            <% if (locals.userLogin) { %>  
              <ul class="user">      
                    <li class="texto"><a href="/users/user">Mi Perfil</a> </li>
                    <li class="texto"><a href="/users/logout">Cerrar Sesión</a> </li> 
                  </ul>

            <%  }else{ %>     
              <ul class="user">                
                <li class="texto"><a href="/users/login">Ingresar</a> </li>
                <li class="texto"><a href="/users/register">Registrarse</a> </li> 
              </ul>
            <% } %>    
    

