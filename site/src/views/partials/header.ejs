<header>
  <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-arrow-up"></i></button>

    <div class="flex-header">
      
        <a href="/" style="margin: 10px 0;">
          <img class="logo" src='/images/Menu/logomin.png' alt='Logo' />
        </a>
  
          <!-- BARRA DE BUSQUEDA -->
          <div id="input">
          <form action="/products/results" method="GET" class="search">
              <input type="text" id="busqueda" name="busqueda" size="25" placeholder="Buscar...">
              <button class="btn-search" type="search">
                  <i class="fas fa-search"></i>
              </button>
          </form>
        </div>
        

        <% if (locals.userLogin) { %>


          <label for='user' class="input-user"><a href="/users/profile"><img class="imgUser" src="/images/users/<%= locals.userLogin.avatar ? locals.userLogin.avatar : 'default-img.jpg'%>" alt="imagen de usuario"></a></label>
          <% if (locals.userLogin && locals.userLogin.rol === 1) { %>
            <ul>
            <li class="texto"><a href="/admin"><i class="fas fa-crown"></i></a> </li>
          </ul>
          <% } %>
        <%  }else{ %> 

        <% } %>

        <% if (locals.userLogin) { %>
          <div class="user-cart">
          <a href="/users/carrito"><i class="fas fa-shopping-cart"></i></a>
          <span class=" badge rounded-pill bg-warning text-dark position-absolute bottom-0" id="span-cantidad-cart"></span>
          </div>
          <% } %>


        <nav class="container-menu">
          <ul class="menu">
            <li class="texto"><a href="/products"><i class="fas fa-utensils"></i></a> </li>
            <li class="texto"><a href="/beneficios"><i class="fas fa-gift"></i></a> </li>

        </ul>
        <ul class="menu-hiden"><li><a href="/users/carrito"><i class="fas fa-shopping-cart"></i></a>
        </li><div class="logo-desktop"><a href="/"><img src="/images/Logo.png" alt="logo"></a></div>
        </ul>



        <% if (locals.userLogin) { %>  
          <ul class="menu">      
                <li class="texto"><a href="/users/profile"><i class="fas fa-user"></i></a> </li>
                
                <li class="texto"><a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a> </li> 


              </ul>

        <%  }else{ %>     
          <ul class="menu">                
            <li class="texto"><a href="/users/login"><i class="fas fa-sign-in-alt"></i></a> </li>
            <li class="texto"><a href="/users/register"><i class="fas fa-user-plus"></i></a> </li> 
          </ul>
        <% } %>    
        </nav>

    </div>
</header>