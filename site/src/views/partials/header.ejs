          <div id="input">
            <input type="text" id="busqueda" name="busqueda" size="25" placeholder="Buscar...">
        </div>


        <input type="checkbox" id='user'>          
        <% if (locals.userLogin) { %>
          <label for='user' class="input-user"><img class="imgUser" src="/images/users/<%= locals.userLogin.img ? locals.userLogin.img : 'default-img.jpg'%>" alt="imagen de usuario"> </label>
        <%  }else{ %> 
          <label for='user' class="input-user"> <i class="fas fa-user"></i> </label>
        <% } %>
