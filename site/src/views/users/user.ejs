<%- include("../partials/head.ejs") %>

<body class="userprofile">

    <%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <div class="card">
    <img src="/images/users/<%= user.img %>" alt="profile photo" style="width:100%">
    <% if (user.sexo === "Masculino"){ %>
      <h1>¡Bienvenido <%= user.name %>!</h1>
      <% } else if (user.sexo === "Femenino") { %>
      <h1>¡Bienvenida <%= user.name %>!</h1>
      <% } else { %>
        <h1>¡Bienvenid@ <%= user.name %>!</h1>
      <% } %>
    <p class="price">Tu perfil Tacopado</p>
    <p>Tu email es <%= userProfile.email %></p>
    <p>Nos elegís desde <%= userProfile.provincia %></p>
    <form action="edit/<%= userProfile.id %>?_method=PUT" method="POST">
    <p><a href="/users/edit/<%= userProfile.id %>" class="button">Editar datos</a></p>
    </form>
    <form action="edit/<%= userProfile.id %>?_method=DELETE" method="POST">
    <p><a href="/users/delete/<%= userProfile.id %>" class="button">Editar datos</a></p>
    </form>
  </div>
<%- include("../partials/footer.ejs") %>
</body>

</html>